# Database Configuration
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/checklist_db

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a new project or select existing
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials
# 4. Add authorized origins and redirect URIs
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Configuration
# Generate a secure random secret key for JWT token signing
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_jwt_secret_key_here

# Frontend Configuration
# URL of the frontend application for CORS
FRONTEND_URL=http://localhost:3000

# Debug Configuration
# Set to "true" to enable SQL query logging (useful for development)
DEBUG=false

# Server Configuration
# Host and port for the FastAPI server
HOST=0.0.0.0
PORT=8000

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Security Configuration
# JWT token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (if needed for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# Optional: Additional CORS origins (comma-separated)
# ADDITIONAL_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com